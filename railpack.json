{
  "$schema": "https://schema.railpack.com",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "app/**",
      "requirements.txt"
    ]
  },
  "deploy": {
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/docs",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
